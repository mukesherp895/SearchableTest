
@{
    ViewBag.Title = "Index";
}
@section Styles {
    <style>
        * {
            box-sizing: border-box;
        }

        html,
        body {
            height: 100%;
            margin: 0;
        }

        #map {
            width: 100%;
            height: 100vh;
        }

        .leaflet-container {
            background: #bbb;
        }
    </style>
}

<div id="map"></div>
<div id="mymodal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="modalTitle"></h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Date Of Birth</th>
                                <th>Gender</th>
                                <th>Address</th>
                                <th>District</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Exit</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
@section scripts {
    <script src="~/Content/JS/NepalData.js"></script>
    <script>
        var nepalMap, nepalGeoJson;
        nepalMap = L.map("map", {
            scrollWheelZoom: false,
            touchZoom: false,
            doubleClickZoom: false,
            zoomControl: true,
            dragging: true,
        }).setView([28.3949, 84.124], 8);

        nepalGeoJson = L.geoJson(nepalData, {
            onEachFeature: onEachFeature
        }).addTo(nepalMap);

        var bound = nepalGeoJson.getBounds();
        nepalMap.fitBounds(bound);

        nepalGeoJson.eachLayer(function (layer) {
            layer.bindTooltip(layer.feature.properties.name, {
                    permanent: true,
                    direction: "center"
                }).openTooltip();
        });

        function highlightFeature(e) {
            var layer = e.target;

            layer.setStyle({
                weight: 2,
                color: "black",
                dashArray: "",
                fillOpacity: 0.7,
                fillColor: "#fff"
            });

            if (!L.Browser.ie && !L.Browser.opera && !L.Browser.edge) {
                layer.bringToFront();
            }
        }

        function resetHighlight(e) {
            nepalGeoJson.resetStyle(e.target);
        }

        function onEachFeature(feature, layer) {
            layer.on({
                mouseover: highlightFeature,
                mouseout: resetHighlight,
            });
        }

        nepalGeoJson.eachLayer(function (layer) {
            layer.on('click', function () {
                var district = this._tooltip._content;
                $("#modalTitle").text(district);
                $.ajax({
                    type: "GET",
                    url: '@Url.Action("GetDistrictWiseContestant","Map")',
                    data: { district: district },
                    dataType: "json",
                    success: function (data) {
                        console.log(data);
                        $('#dataTable tbody').empty();
                        $.each(data, function (index, item) {
                            var td = '<td>' + item.Firstname + ' ' + item.Lastname + '</td> ';
                            var td1 = '<td>' + item.Gender + '</td>';
                            var td2 = '<td>' + item.DOB + '</td>';
                            var td3 = '<td>' + item.DistrictName + '</td>';
                            var td4 = '<td>' + item.Address + '</td>';
                            $("#dataTable").append('<tr id="selectRow">' + td + td1 + td2 + td3 + td4 + '</tr>');
                        });
                    }
                });
                $('#mymodal').modal('show');
            });
        });


    </script>
}




